{
    "workbench.colorTheme": "Best Themes - Tomorrow Night Minimal",
    "editor.fontSize": 16,
    "editor.lineHeight": 24,
    "editor.letterSpacing": 0.5,
    "editor.fontFamily": "JetBrainsMono Nerd Font, monospace",
    "editor.useTabStops": false,
    "keyboard.dispatch": "keyCode",
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.centerLayout": false,
    "zenMode.showTabs": "none",
    "editor.minimap.enabled": false,
    "editor.tabSize": 4,
    "editor.fontLigatures": true,
    "terminal.integrated.fontLigatures.enabled": true,
    "editor.fontWeight": 500,
    "FSharp.unnecessaryParenthesesAnalyzer": false,
    "explorer.confirmDelete": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false,
        "python": true,
        "fsharp": true
    },
    "github.copilot.nextEditSuggestions.enabled": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
    },
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": [ "<C-h>" ], "after": [ "<C-w>", "h" ] },
        { "before": [ "<C-l>" ], "after": [ "<C-w>", "l" ] },
        { "before": [ "<C-j>" ], "after": [ "<C-w>", "j" ] },
        { "before": [ "<C-k>" ], "after": [ "<C-w>", "k" ] },
        { "before": [ "<leader>", "z", "z" ], "commands": [ "workbench.action.toggleZenMode" ] },
        { "before": [ "b", "t" ], "commands": [ "workbench.action.togglePanel" ] },
        { "before": [ "b", "u" ], "commands": [ "workbench.action.toggleSidebarVisibility" ] },
        { "before": [ "<leader>", "g", "g" ], "commands": [ "workbench.view.scm" ] },
        { "before": [ "b", "w", "a" ], "commands": [ "workbench.action.closeOtherEditors" ] },
        { "before": [ "j" ], "after": [ "j", "z", "z" ] },
        { "before": [ "k" ], "after": [ "k", "z", "z" ] },
        { "before": [ "<leader>", "p", "s" ], "commands": [ "quickgrep.action" ] },
        { "before": [ "<leader>", "f" ], "commands": [ "editor.action.formatDocument" ] }, { "before": [ "<leader>", "q" ], "commands": [ ":q" ] },
        { "before": [ "<leader>", "w" ], "commands": [ ":w" ] },
        { "before": [ "<leader>", "d" ], "after": [ "d", "d" ] },
        { "before": [ "<leader>", "e" ], "commands": [ "workbench.view.explorer" ] },
        { "before": [ "K" ], "commands": [ "editor.action.showHover" ] },
        { "before": [ "H" ], "commands": [ ":bp" ] },
        { "before": [ "L" ], "commands": [ ":bn" ] },
        { "before": [ "m", "m" ], "after": [ "%" ] },
        { "before": [ "g", "l" ], "after": [ "$" ] },
        { "before": [ "g", "s" ], "after": [ "^" ] },
        { "before": [ "g", "h" ], "after": [ "0" ] }
    ],
    "vim.visualModeKeyBindings": [
        { "before": [ "m", "m" ], "after": [ "%" ] },
        { "before": [ "g", "l" ], "after": [ "$" ] },
        { "before": [ "g", "s" ], "after": [ "^" ] },
        { "before": [ "g", "h" ], "after": [ "0" ] }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "editor.detectIndentation": false,
    "terminal.integrated.tabs.enabled": false,
    "editor.lineNumbers": "relative",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "right",
    "extensions.ignoreRecommendations": true,
    "editor.inlineSuggest.edits.showCollapsed": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
}